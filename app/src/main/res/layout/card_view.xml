<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/car_view_id"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="274dp"
            android:padding="10dp">


            <TextView
                android:id="@+id/card_Movie_name_id"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textAlignment="center"
                android:text="Apple"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/card_Movie_imageView_id" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true">
                <TextView
                    android:id="@+id/card_movie_small_description_id"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="2dp"
                    android:textAlignment="center"
                    android:text="Apple 40Rs/kg"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true" />
            </ScrollView>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/card_Movie_imageView_id"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">
            </ImageView>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="52dp"
                android:id="@+id/car_movie_release_date_id"
                android:layout_toEndOf="@+id/card_Movie_imageView_id" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:id="@+id/car_view_stars_id"
                android:textAlignment="center"
                android:layout_below="@+id/car_movie_release_date_id"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/card_Movie_imageView_id" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
    
</RelativeLayout>